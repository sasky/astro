---
import Hamburger from "./Hamburger.astro";
import { toAnchor ,endsWithDash} from "../scripts/utils";
import { any } from "astro:schema";
const isHome = Astro.url.pathname === "/";
const anchor = toAnchor(Astro.url.pathname);
const trimmedAnchor = endsWithDash(anchor) ? anchor.slice(0, -1) : anchor;
const anchorLink = isHome ? "menu" : trimmedAnchor;
---
<header>
  {
    !isHome && (
      <nav class="header-nav">
        <a class="header-link" href={"/#" + anchorLink}>
          <div class="header-hamburger">
            <span class="header-line" />
            <span class="header-line" />
            <span class="header-line" />
          </div>
          <span>menu</span>
        </a>
      </nav>
    )
  }
  {
    isHome && (
      <>
        <h1 class="header-title">sasky.nz</h1>
        <h2 class="header-subtitle">Cameron Grant</h2>
      </>
    )
  }
</header>
